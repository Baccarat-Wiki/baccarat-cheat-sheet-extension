{
    "manifest_version": 3,
    "name": "Baccarat Cheat Sheet",
    "description": "Baccarat cheat sheet with basic rules, card values, step-by-step guide to play, and 3rd card rule.",
    "version": "1.0",
    "action": {
        "default_title": "Baccarat Cheat Sheet",
        "default_popup": "index.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png",
            "512": "images/icon-512.png"
          }
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "cheatsheet@baccarat.wiki",
        "strict_min_version": "91.0"
            }
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        ""
    ],
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png",
        "512": "images/icon-512.png"
    }
}